<% content_for :headerwrap do %>
  <%= render 'components/login_register' %>
<% end %>

<h1>Links</h1>

<% if items.empty? %>
  No items to display! Go <%= link_to 'create one', new_item_path %>.
<% else %>
  <table class="table table-striped">
    <tbody>
      <% items.each do |item| %>
        <tr>
          <td><%= link_to item.title, item %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
